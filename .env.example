# SafeSwap Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=SafeSwap
NODE_ENV=development

# Stripe Configuration (Test Mode)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# JWT Configuration (Mock Implementation)
JWT_SECRET=your_super_secret_jwt_key_here_min_32_chars
JWT_EXPIRES_IN=7d

# API Configuration
API_BASE_URL=http://localhost:3000/api
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/webp,application/pdf,text/plain

# Database Configuration (For Future Django Backend)
# DATABASE_URL=postgresql://username:password@localhost:5432/safeswap_db
# REDIS_URL=redis://localhost:6379

# Email Configuration (For Future Implementation)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your_email@example.com
# SMTP_PASS=your_email_password
# FROM_EMAIL=noreply@safeswap.com

# External Services
# DICEBEAR_API_URL=https://api.dicebear.com/7.x
# UNSPLASH_ACCESS_KEY=your_unsplash_access_key

# Security
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# Feature Flags
FEATURE_SAVINGS_ENABLED=true
FEATURE_ADMIN_PANEL_ENABLED=true
FEATURE_KYC_ENABLED=true
FEATURE_WEBSOCKET_ENABLED=false

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Analytics (Optional)
# GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
# POSTHOG_KEY=your_posthog_key